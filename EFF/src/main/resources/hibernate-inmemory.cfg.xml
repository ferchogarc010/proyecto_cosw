<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
    <property name="hibernate.connection.driver_class">org.h2.Driver</property>
    <property name="hibernate.connection.url">jdbc:h2:mem:test</property>    
    <property name="hibernate.hbm2ddl.auto">create</property>
    <property name="hibernate.show_sql">true</property>
    
    <!-- Aqui agregar las clases mapeadas-->
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Categoria"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Franquicia"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.PedidoProducto"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Pedido"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.ProductoId"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Producto"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.PlazoletaComida"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Sucursal"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.PlazoletaComidaId"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Cliente"/>
    <mapping class="edu.eci.cosw.persistenceexercises.simplepersistencelayer.Pago"/>

    </session-factory>  
</hibernate-configuration>


 